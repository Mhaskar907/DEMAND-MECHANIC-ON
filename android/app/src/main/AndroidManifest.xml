import 'package:flutter/foundation.dart';
import 'package:flutter/material.dart';
import 'package:supabase_flutter/supabase_flutter.dart';

class AuthService with ChangeNotifier {
  final SupabaseClient _supabase = Supabase.instance.client;
  User? _currentUser;
  String? _currentUserRole;
  bool _isLoading = true;
  String? _pendingRoleForOAuth;

  AuthService() {
    _getCurrentUser();
    _supabase.auth.onAuthStateChange.listen((data) {
      _getCurrentUser();
    });
  }

  User? get currentUser => _currentUser;
  String? get currentUserRole => _currentUserRole;
  bool get isLoading => _isLoading;

  Future<void> _getCurrentUser() async {
    try {
      _currentUser = _supabase.auth.currentUser;

      if (_currentUser != null) {
        // Fetch user role from profiles table
        final profile = await _supabase
            .from('profiles')
            .select('role')
            .eq('id', _currentUser!.id)
            .maybeSingle();

        if (profile != null) {
          _currentUserRole = profile['role'];
        } else if (_pendingRoleForOAuth != null) {
          // First-time OAuth login: create profile with the pending role
          await _supabase.from('profiles').insert({
            'id': _currentUser!.id,
            'email': _currentUser!.email,
            'role': _pendingRoleForOAuth,
          });
          _currentUserRole = _pendingRoleForOAuth;
          _pendingRoleForOAuth = null;
        }
      }
    } catch (e) {
      // keep lightweight logging
      debugPrint('Error getting current user: $e');
    } finally {
      _isLoading = false;
      notifyListeners();
    }
  }

  Future<String?> signUp({
    required String email,
    required String password,
    required String role,
  }) async {
    try {
      final AuthResponse response = await _supabase.auth.signUp(
        email: email,
        password: password,
        data: {'role': role},
      );

      if (response.user != null) {
        await _supabase.from('profiles').insert({
          'id': response.user!.id,
          'email': email,
          'role': role,
        });

        final AuthResponse loginResponse = await _supabase.auth.signInWithPassword(
          email: email,
          password: password,
        );

        _currentUser = loginResponse.user;
        _currentUserRole = role;
        notifyListeners();
      }

      return null;
    } on AuthException catch (e) {
      return e.message;
    } catch (e) {
      return 'An unexpected error occurred';
    }
  }

  Future<String?> login({
    required String email,
    required String password,
  }) async {
    try {
      final AuthResponse response = await _supabase.auth.signInWithPassword(
        email: email,
        password: password,
      );

      _currentUser = response.user;

      final profile = await _supabase
          .from('profiles')
          .select('role')
          .eq('id', _currentUser!.id)
          .maybeSingle();

      if (profile != null) {
        _currentUserRole = profile['role'];
      }

      notifyListeners();
      return null;
    } on AuthException catch (e) {
      return e.message;
    } catch (e) {
      return 'An unexpected error occurred';
    }
  }

  Future<void> signOut() async {
    try {
      await _supabase.auth.signOut();
      _currentUser = null;
      _currentUserRole = null;
      notifyListeners();
      debugPrint('User signed out successfully');
    } catch (e) {
      debugPrint('Error signing out: $e');
    }
  }

  /// Initiate Google sign-in.
  /// - For web, uses the web OAuth flow.
  /// - For mobile, passes a redirectTo that must be registered in Supabase.
  /// Provide an optional [role] to set the user's role on first OAuth login.
  Future<String?> signInWithGoogle({String? role}) async {
    try {
      _pendingRoleForOAuth = role;

      if (kIsWeb) {
        // Web flow - use signInWithOAuth for web
        await _supabase.auth.signInWithOAuth(
          OAuthProvider.google,
        );
      } else {
        // Mobile/native - use signInWithOAuth with redirectTo
        await _supabase.auth.signInWithOAuth(
          OAuthProvider.google,
          redirectTo: 'com.example.pro_v1://login-callback/',
        );
      }

      // onAuthStateChange listener will call _getCurrentUser and create profile if needed
      return null;
    } on AuthException catch (e) {
      _pendingRoleForOAuth = null;
      return e.message;
    } catch (e) {
      _pendingRoleForOAuth = null;
      return 'An unexpected error occurred';
    }
  }
}